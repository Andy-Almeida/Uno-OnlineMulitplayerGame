        <a href="/games/<%= game.id %>/join">Join <%= game.id %> hello</a>
        <% } }%>
        <% if( games.length < 1 ) { %>
          <p>No Games are Available to Join, instead create one</p>
        <% } %>
      </form>
    </div>

