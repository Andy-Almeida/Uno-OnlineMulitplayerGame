<html lang="en">
  <head>
    <title><%= title %></title>
    <script src="/scripts/index.js" defer></script>
    <link rel="stylesheet" href="/stylesheets/home.css" />
  </head>
  <body>
    <h1>
      Lobby Page (Authenticated) - Hi <%= user.username %> (<%= user.id %>)
    </h1>

    <!-- Nav Bar -->
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/authentication/login">Login</a></li>
      <li><a href="/authentication/logout">Logout</a></li>
      <li><a href="/authentication/register">Sign Up</a></li>
      <li><a href="/lobby">Lobby</a></li>
      <li><a href="/games">UNO</a></li>
    </ul>

    <!-- Game List-->
    <div id="games-list">

      <!-- Game Create Button -->
      <form method="post" action="/games/create">
        <input type="submit" value="Create Game" />
      </form>

      <!-- Available Games -->
      <h4>Available games to join</h4>
      <% if(games.length > 0) { %>
        <% for(game of games) { %>
          <a href="/games/<%= game.id %>/join">Join <%= game.id %></a>
        <% }%>
      <% } %>
      <% if( games.length < 1 ) { %>
        <p>No Games are Available to Join, instead create one</p>
      <% } %>
    </div>

    <!-- ALready Joined Games -->
    <div>
      <h4>Your Games</h4>
        <% if(joinedgames.length > 0) { %>
          <% for(joinedgame of joinedgames) { %>
            <a href="/games/<%= joinedgame.id %>/">Continue <%= joinedgame.id %></a>
          <% }%>
        <% } %>
        <% if( joinedgame.length < 1 ) { %>
          <p>No games joined, instead create one or Join one if available</p>
        <% } %>
    </div>
    <br>

    <!-- Chat Area -->
    <div id="chat">Chat area</div>
    <!-- Chat Box -->
    <div id="chat-container">
      <div id="messages"></div>
      <label>
        <input id="chatMessage" name="chat-message" placeholder="Message..." />
      </label>
    </div>

    <!-- Chat Message -->
    <template id="chat-message-template">
      <div>
        <span class="username"></span>
        <span class="message"></span>
        <span class="timestamp"></span>
      </div>
    </template>

  </body>
</html>