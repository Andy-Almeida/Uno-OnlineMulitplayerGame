{
  "name": "term-project-teamx",
  "version": "1.0.0",
  "description": "This is a game created by Andy, Arjun, Tyler, and KARMA. This game will be a low level implementation of UNO. The stack consists of HTML, CSS, and JS.",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node ./backend/server.js",
    "start:dev": "concurrently \"npm:server:dev\" \"npm:build:css\" \"npm:build:dev\"",
    "server:dev": "NODE_ENV=development nodemon --watch backend ./backend/server.js",
    "build:dev": "esbuild ./frontend/index.js ./frontend/games/index.js --bundle --outdir=./backend/static/scripts/ --sourcemap --watch",
    "build:css": "npx tailwindcss -i ./frontend/css/index.css -o ./backend/static/stylesheets/index.css --watch",
    "db:create": "node-pg-migrate create -- ",
    "db:migrate": "node-pg-migrate up",
    "db:rollback": "node-pg-migrate down",
    "postinstall": "npm run db:migrate"
  },
  "keywords": [],
  "author": "pie240:Andy, Kepler:Arjun, Tydershot:Tyler, KARMA",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "connect-livereload": "^0.6.1",
    "connect-pg-simple": "^8.0.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.9",
    "esbuild": "0.17.18",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "http-errors": "^2.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "livereload": "^0.9.3",
    "morgan": "^1.10.0",
    "node-pg-migrate": "^6.2.2",
    "nodemon": "^2.0.21",
    "pg": "^8.10.0",
    "pg-promise": "^11.4.3",
    "prettier": "^2.8.4",
    "pug": "^3.0.2",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.6.1",
    "ts-loader": "^9.4.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.21.4",
    "babel-loader": "^9.1.2",
    "concurrently": "^8.0.1",
    "nodemon": "^2.0.22",
    "tailwindcss": "^3.3.2",
    "webpack": "^5.76.1",
    "webpack-cli": "^5.0.2"
  }
}
